<script>
const c=document.getElementById("particles"),x=c.getContext("2d");
let w,h,p=[];
function r(){w=c.width=innerWidth;h=c.height=innerHeight}
window.onresize=r;r();
for(let i=0;i<80;i++)p.push({x:Math.random()*w,y:Math.random()*h,s:Math.random()*2+1});
function a(){
x.clearRect(0,0,w,h);
p.forEach(e=>{
e.y+=e.s*.3;
if(e.y>h)e.y=0;
x.fillStyle="rgba(255,255,255,.15)";
x.fillRect(e.x,e.y,e.s,e.s);
});
requestAnimationFrame(a);
}
a();
</script>
